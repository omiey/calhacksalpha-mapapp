package com.calhacksalpha.dawwwskigrowl.data;

import java.util.ArrayList;
import java.util.List;

import com.here.android.mpa.common.GeoCoordinate;

public class LocationEntities implements LocationAware {
	
	private List<LocationAware> entities = new ArrayList<LocationAware>();
	
	@Override
	public void drawLocation() {
		for (Drawable drawable : entities) {
			drawable.drawLocation();
		}
	}
	
	public void addEntity(Drawable d) {
		entities.add(d);
	}
	
	public void removeEntity(Drawable d) {
		entities.remove(d);
	}

	@Override
	public void updateLocation(GeoCoordinate coordinate) {
		// TODO Auto-generated method stub
		
	}
}
